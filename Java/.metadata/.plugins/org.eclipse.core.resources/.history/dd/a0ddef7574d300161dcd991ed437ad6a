package q5;

import javax.swing.JOptionPane;

public class menu {
	
	public static String msg = "Selecione uma opção: \n1 - Entrada\n2 - Saída\n3 - Listar situação atual\n4 - Sair";
	
	public static int showMenu(){
		
		int option = Integer.parseInt(JOptionPane.showInputDialog(msg));
		return option;		
		
	}

	public static void inserirCarro(String[] estacionamento,int vaga, String placa) {
		estacionamento[vaga] = placa;	
	}
	
	public static void removerCarro(String[] estacionamento, int vaga){
		estacionamento[vaga] = null;
	}


}
