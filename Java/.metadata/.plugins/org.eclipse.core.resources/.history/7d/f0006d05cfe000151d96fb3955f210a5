package grupoD.associapp.dao;

import java.sql.Connection;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.List;

import grupoD.associapp.modelo.Membro;
import grupoD.associapp.modelo.Parentesco;
import grupoD.associapp.modelo.Recurso;

public class ParentescoJDBC_DAO implements ParentescoDAO{
	
	private Connection conn;
	
	public void inserir(Parentesco p) {
		Connection conn = ConnectionFactory.getConnection();
		String sql = "INSERT INTO parentescos(parente, tipo) VALUES('" + p.getParente() + "'," + p.getTipo() + ");";
		try{
			System.out.println(sql);
			Statement stmt = conn.createStatement();
			stmt.executeUpdate(sql);
			conn.close();
		}catch (SQLException e){
			e.printStackTrace();
			System.out.println("Erro ao inserir Parentesco");
		}
	}
	@Override
	public void createTable() {
		Connection conn = ConnectionFactory.getConnection();
		String sql = "CREATE TABLE parentescos(id INTEGER PRIMARY KEY AUTOINCREMENT, nome TEXT, disponibilidade INT, grauSituacao INT);";
		try{
			System.out.println(sql);
			Statement stmt = conn.createStatement();
			stmt.executeUpdate(sql);
			conn.close();
		}catch (SQLException e){
			e.printStackTrace();
			System.out.println("Erro ao criar tabela");
		}
	}
	@Override
	public List<Parentesco> lista() {
		// TODO Auto-generated method stub
		return null;
		}
	@Override
	public void remover(Parentesco p) {
		Connection conn = ConnectionFactory.getConnection();
		String sql = "DELETE FROM parentescos where parentescos.getTipo() = " + p.getTipo();
		try{
			System.out.println(sql);
			Statement stmt = conn.createStatement();
			stmt.executeUpdate(sql);
		}catch (Exception e){
			e.printStackTrace();
			System.out.println("Erro ao excluir parentesco");
		}
	}
	@Override
	public Parentesco obter(String tipo) {
		// TODO Auto-generated method stub
		return null;
	}
}
