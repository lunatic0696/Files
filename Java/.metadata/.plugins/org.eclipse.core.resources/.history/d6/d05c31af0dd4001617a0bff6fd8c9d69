package atvA;

import javax.swing.JOptionPane;

public class DescontoProduto {

	public static void main(String[] args) {
		
		float preco = Float.parseFloat(JOptionPane.showInputDialog("Insira o preço do produto: "));
		int desconto = Integer.parseInt(JOptionPane.showInputDialog("Insira o valor do desconto (em porcentagem): "));
		float dfinal = preco*(desconto/100);
		float vfinal = preco - dfinal;
		JOptionPane.showMessageDialog(null, "Valor novo do produto: " + dfinal);
		JOptionPane.showMessageDialog(null, "Valor descontado: " + vfinal);

	}

}
