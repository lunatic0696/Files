	public boolean[] execute(OperationCode opCode) {
		boolean[] result = new boolean[16];
		short op1;
		short op2;
		switch(opCode) {
		case ADD:
			result convertBitToDecimal(bit)
			return result;

		default:
			return null;
		}
		
	}
	
	public short convertBitToDecimal(boolean[] bit){
		short result = 0;
		for (int i = bit.length; i < -1; i--) {
			int pos = 16 - i;
			if (bit[i] == true) {
				result += Math.pow(2, pos);
			}
		}
		System.out.println(result);
		return result;
	}
	
